<form class="klearMatrix_form" action="${saveAction}" data-type='new'>
    <fieldset class="ui-widget-content ui-corner-all">
		<legend class="ui-widget-header ui-corner-all">${$item.getTitle(title,false)}</legend>

        {{each(colIdx,column) columns}}
	    <p class="ui-widget-content ui-corner-all">
            <label for="${id}${randIden}">${name}:</label>
           {{html $item.getEditDataForField(false,column,true)}}
           {{if (column.options)}}
                {{each column.options}}
                <a class="_fieldOption inherit option ${type} {{if (defaultOption)}}default{{/if}} ui-state-nojump"
                href=""
                data-${type}="${$item.getIndex($value,type)}"
                title="${$item.getTitle(title,false,true)}">
                <span class="ui-silk inline ${icon}"></span>{{if (label) }}${$item.getTitle(title,false,true)}{{/if}}</a>
                {{/each}}
            {{/if}}
        </p>
		{{/each}}
	</fieldset>
    <div class="generalOptionsToolbar ui-widget-content ui-corner-all">
        <a class="closeTab" href="" title="Cerrar"><span class="ui-silk inline ui-silk-cross"></span>Cerrar</a>
        <a class="action" href="" title="Guardar"><span class="ui-silk inline ui-silk-bullet-disk"></span>Guardar</a>
        <span class="action autoClose "><span><input type="checkbox" name="autoclose" />Cerrar automáticamente después de guardar</span></span>
{{if (generalOptions.length>0) }}
{{each generalOptions}}
    <a class="_generalOption option ${type}" href="" data-${type}="${$item.getIndex($value,type)}" title="${$item.getTitle(title,false)}" {{if (multiInstance)}} data-multiinstance='true'{{/if}}>
    <span class="ui-silk inline ${icon}"></span>
    {{if (label) }}
        ${$item.getTitle(title,false)}
    {{/if}}
    </a>
{{/each}}
{{/if}}

    </div>

</form>
