<form class="klearMatrix_edit" action="${saveAction}" data-type='new'>
	<fieldset>
		<legend></legend>
		<dl>
	 	{{each columns}}
        
	            <dt><label for="${id}${randIden}">${name}</label></dt>
	            <dd>{{tmpl($item.getDataForFieldTemplate('',$value)) $item.getTemplateForType($value)}}</dd>
		
		{{/each}}
		</dl>
	</fieldset>
    <div class="generalOptionsToolbar ui-widget-content ui-corner-all">
        <button class="closeTab" data-text="true" data-icon="ui-icon-close" title="Cerrar">Cerrar</button>
        <button data-text="true" data-icon="ui-icon-circle-check" title="Guardar">Guardar</button>
    </div>

</form>
