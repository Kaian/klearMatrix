{{if (info) }}

<div class="ui-widget-content ui-corner-all assistant">
<span class="
ui-silk
ui-silk-${info.icon}
fieldInfo-${info.type}
fieldInfo-position-${info.position}
"
data-title="${info.text}"
></span>{{if (info.label)}} ${info.label} {{/if}}
</div>
